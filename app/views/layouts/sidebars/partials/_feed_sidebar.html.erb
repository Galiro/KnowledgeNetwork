<p><h1 class="name_size_2"><i>Projects Feed</i></h1></p>
<h4 class="mycelial_page_subtitle">Hot Projects &rarr;</h4>
<% if params[:tag] %>
	<p><%= link_to "#{params[:tag]}", feed_path(:tag => params[:tag]), class: 'active_tag' %><br/>
	<a href="/feed">Clear Tag</a>
	</p>
<% end %>
<div class="separator clearfix">
 <div class="line"></div>
</div>

<h4 class="filter_text">Filter By Tags</h4>

<%= link_to "Ruby", feed_path(:tag => 'ruby'), class: 'feed_tags' %>
