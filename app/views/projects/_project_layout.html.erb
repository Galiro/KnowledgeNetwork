<!-- Different form fields will be displayed based on project_type and widget_type. Insert these vars into the db as well, in the controller -->
<%= render 'layouts/span8_well' %>
  <h2 style="color:#777">Add a project to your page:</h2>
  <p>Fill in the fields below.</p>
  <hr>
  <%= form_for(@project, :html => { :class => "form-horizontal" } ) do |f| %>
  <div class="control-group">
    <%= f.label :project_name,  class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :project_name, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :short_description, "Short description", class: "control-label required" %>
    <div class="controls">
      <%= f.text_area :short_description, :cols => 80, :rows => 3%>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :long_description, "Long Description", class: "control-label required" %>
    <div class="controls">
      <%= f.text_area :long_description, :cols => 80, :rows => 8%>
    </div>
  </div>

  <div class="control-group">
      <%= f.label :tech_tag_tokens, "Main Languages and Technologies (e.g Ruby, Rails, Python)" %>
      <div class="controls">
        <%= f.text_field :tech_tag_tokens, data: {load: @project.tech_tags} %>
      </div>
  </div>
  <!-- <div class="control-group">
    <%= f.label :main_language, "Main Language (e.g Ruby, Python)", class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :main_language, class: "input-xlarge" %>
    </div>
  </div> -->

  <div class="control-group">
    <%= f.label :other_interesting, "Other interesting things about this project", class: "control-label required" %>
    <div class="controls">
      <%= f.text_area :other_interesting, :cols => 80, :rows => 8%>
    </div>
  </div>

  <div class="controls">
  <% #image_tag @project.picture_url(:thumb).to_s %>
  <br/><br/>
  </div>

  <div class="control-group">
    <%= f.label :picture, "Picture", class: "control-label required" %>
    <div class="controls">
      <%= f.file_field :picture %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :url, "Project URL", class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :url, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :github_repo, "Github Repo", class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :github_repo, class: "input-xlarge" %>
    </div>
  </div>
  <%= f.hidden_field :project_type, value: @project_type %>
  <%= f.hidden_field :widget_type, value: @widget_type %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>



