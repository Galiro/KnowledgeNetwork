<%= form_for(@project, :html => { :class => "form-horizontal" } ) do |f| %>
  <div class="control-group">
    <%= f.label :short_description,  class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :short_description, class: "input-xlarge" %>
    </div>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>