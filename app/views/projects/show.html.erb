<%= render 'layouts/opening_divs' %>
	<div class="mycelial_page page">
		<h1 class="entry-title" style="font-size:25px; color:#333"><%= @project.project_name %></h1>
		<div class="entry-content">
			<div>
				<a class="lightbox mycelial_large_image" title="Project Image" href="<%= @project.picture_url(:large).to_s %>">
					<span class="overlay" style="display:none; ">
						<span class="icon"></span>
					</span>
					<%= image_tag @project.picture_url(:cover).to_s, class: "project_detail_image" %>
				</a>
				
				<div class="project_blocks">
					<div id="short_description">
					<div class="user_edit" style="display:none"><%= link_to "Edit", "/projects/#{params[:id]}/edit?edit_block=short_description", class: "lightbox btn", :remote => true %></div>
					<p>
						<b>Summary:</b><br/><br/>
						<%= @project.short_description %>
					</p>
					</div>
				</div>
				<br/>
				<div class="project_blocks">
					<div id="long_description">
					<div class="user_edit" style="display:none"><%= link_to "Edit", "/projects/#{params[:id]}/edit?edit_block=long_description", class: "lightbox btn", :remote => true %></div>
					<p>
						<b>Project Description:</b><br/><br/>
						<%= @project.long_description %>
					</p>
					</div>
				</div>
			</div>
			<div style="clear:both"></div>
			<div class="project_blocks">
			<div class="prog_language" style="margin-bottom:20px;">
				<div class="user_edit" style="display:none"><%= link_to "Edit", "/projects/#{params[:id]}/edit?edit_block=tech_tags", class: "btn" %></div>
				<h3>Main Languages and Technologies:</h3>
				<% @tech_tags.each do |t| %>
					<% if t.picture != nil %>
						<%= image_tag "tech_tags/#{t.picture.to_s}", class: "picture_tags" %>
					<% else %>
						<div class="generic_tags"><span><%= t.name %></span></div>
					<% end %>
				<% end %>
			</div>
			<div style="clear:both"></div>
			</div>
			<hr>
			<% if !@project.other_interesting.empty? %>
			<div class="project_blocks">
				<div class="other_interesting">
					<div class="user_edit" style="display:none"><%= link_to "Edit", "/projects/#{params[:id]}/edit?edit_block=other_interesting", class: "lightbox btn", :remote => true %>
					</div>
					<h3>Other Interesting Things About This Project:</h3>

					<p style="font-size:14px;">
						<%= @project.other_interesting %>
					</p>
				</div>
			</div>
			<hr>
			<% end %>
			<% unless @project.url.empty? and @project.github_repo.empty? %>
			<div class="project_blocks">
				<div class="project_links">
					<div class="user_edit" style="display:none"><%= link_to "Edit", "/projects/#{params[:id]}/edit?edit_block=project_links", class: "lightbox btn", :remote => true %>
					</div>
					<% unless @project.url.empty? %>
						<div class="project_url">
							<h3>Vist This Project: <a href="<%= @project.url.to_s %>"><%= @project.url.slice(0, 80) %></a></h3>
						</div>
					<% end %>
					<% unless @project.github_repo.empty? %>
						<div class="github_link">
							<%= image_tag "github.jpg", style: "float:left; margin-right:15px;" %><h3>Check it out on Github: <br/><a href="<%= @project.github_repo.to_s %>"><%= @project.github_repo.slice(0, 80) %></a></h3>
						</div>
					<% end %>
				</div>
			</div>
			<% end %>
		</div>
	</div>
	<div class="mycelial_sidebar">
		<b>Back to All Projects?</b>       
		<br/><br/>
		<a href="/projects/new" class="button white">Visit Project Site</a>
    <br/>
		More of Damian's Projects:
		<hr style="padding:0px; margin:0">
		<% @user_projects.each do |f| %>
		<div style="padding:5px;">
			<a href="#"><%= f.project_name %></a>
		</div>
		<hr style="margin:0">
		<% end %>

		<br/>
    <a href="/projects/new" class="button orange">Like This Project</a>
    <a href="/projects/new" class="button navy">Add a Comment</a>
	</div>
<%= render 'layouts/closing_divs' %>