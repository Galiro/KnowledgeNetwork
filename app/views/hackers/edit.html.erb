
<div class="span8 well">
  <%= render 'layouts/errors' %>
  <%= form_for(@hacker, :html => { :class => "form-horizontal" } ) do |f| %>
  <div class="control-group">
    <%= f.label :name,  class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :name, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :hnusername, "HN Username", class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :hnusername, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :linkedin_username, "LinkedIn Username", class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :linkedin_username, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :personal_site, "Personal Site", class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :personal_site, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :github_username, "GitHub Username", class: "control-label required" %>
    <div class="controls">
      <%= f.text_field :github_username, class: "input-xlarge" %>
    </div>
  </div>
  <%= f.submit "Save changes", class: "btn btn-info" %>
  <hr>
  <% if @projects.empty? %>
    <h2>You don't have any projects added yet. Add a project with the buttons below</h2>
  <% else %>
  <div class="row">
  <div style="float:right">
    <a href="#" class="button orange">Add another project</a>
  </div>
  <div class="span6">
  <h2>Your Projects</h2>
  <p>Add another project with the button to the right, or click on a project to edit</p>
  </div>
  </div>
  <hr style="margin-top:0;">
    <% @projects.each do |p| %>
      <b><%= p.project_name %></b>
    <% end %>
  <% end %>
  <p></p>
  <% end %>
