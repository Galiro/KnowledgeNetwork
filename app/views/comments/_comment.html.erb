<div class="comment_box">
	<div style="padding:15px">
		<div style="float:left; margin-right:15px;">
		<%= image_tag @page.image_url(:thumb).to_s %>     
		</div>

		<div class="comment-top-data">
			<%= comment.created_at.to_s.slice(0, 10) %>		 Â· 
			<strong>
				<% if user_signed_in? %>
					<%= link_to "Reply", "/comments/new?project_id=#{@project.id}&parent_id=#{comment.id}", class: "lightbox comment_links", :remote => true %>
				<% else %>
					<%= link_to "Reply", new_user_session_path, class: "comment_links" %>
				<% end %>
			</strong>
			<% if user_signed_in? %>
				<div style="float:right">
				<% if comment.user_id == current_user.id %>
					<%= link_to image_tag("pencil.png", :class => "pencil_icon"), "/comments/#{comment.id}/edit?project_id=#{@project.id}&parent_id=#{comment.id}", class: "lightbox", :remote => true %>
				<% end %>
				<% if @page_owner == 1 && comment.user_id != current_user.id %>
					<%= link_to image_tag("pencil.png", :class => "pencil_icon"), "/comments/#{comment.id}/edit?project_id=#{@project.id}&parent_id=#{comment.id}", class: "lightbox", :remote => true %> 
				<% end %>
				</div>
			<% end %>
		</div>

		<div class="comment_body">
			<p><%= comment.comment %></p>
		</div>
	</div>
</div>